@model Category


<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Slider</h4>
                <form method="post" class="forms-sample" enctype="multipart/form-data">

                    <div class="form-group mb-3">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control">
                        <span class="text-danger d-block mt-3" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group mb-3">
                        <input asp-for="IsMain" class="mr-1">
                        <label asp-for="IsMain"></label>
                        <span class="text-danger d-block mt-3" asp-validation-for="IsMain"></span>
                    </div>
                    <div class="form-group mb-3" id="PhotoBox">
                        <label asp-for="Photo"></label>
                        <input asp-for="Photo" class="form-control">
                        <span class="text-danger d-block mt-3" asp-validation-for="Photo"></span>
                    </div>
                    <div class="mb-3" id="CatBox">
                        <label class="form-label">Select Main Category</label>
                        <select class="form-select" name="mainCatId">
                            @foreach (Category maincat in ViewBag.MainCategories)
                            {
                                <option value="@maincat.Id">@maincat.Name</option>
                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a asp-action="Index" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>

        if ($('#IsMain').prop('checked')) {
            $("#PhotoBox").removeClass("d-none") //parent olanda sekil gorsensin
            $("#CatBox").addClass("d-none") // ve cat secmey silinsin
        } else {
            $("#PhotoBox").addClass("d-none")
            $("#CatBox").removeClass("d-none")
        }

            $(document).on("change","#IsMain", function () {
                if ($('#IsMain').prop('checked')) {
                    $("#PhotoBox").removeClass("d-none") //parent olanda sekil gorsensin 
                    $("#CatBox").addClass("d-none") // ve cat secmey silinsin
                } else {
                    $("#PhotoBox").addClass("d-none") 
                    $("#CatBox").removeClass("d-none")
                }
            });
    </script>

}