@model RegisterVM
<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create User</h4>
                 <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <form method="post" class="forms-sample">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control">
                        <span class="text-danger d-block mt-3" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Surname"></label>
                        <input asp-for="Surname" class="form-control">
                        <span class="text-danger d-block mt-3" asp-validation-for="Surname"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Username"></label>
                        <input asp-for="Username" class="form-control">
                        <span class="text-danger d-block mt-3" asp-validation-for="Username"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control">
                        <span class="text-danger d-block mt-3" asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control">
                        <span class="text-danger d-block mt-3" asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CheckPassword"></label>
                        <input asp-for="CheckPassword" class="form-control">
                        <span class="text-danger d-block mt-3" asp-validation-for="CheckPassword"></span>
                    </div>
                    <div class="form-group">
                        <label>Select Role</label>
                        <select class="form-control" name="role">
                            @foreach (string role in ViewBag.Roles)
                            {
                                <option value="@role">@role</option>

                            }
                        </select>
                    </div>
                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                        <a asp-action="Index" class="btn btn-light">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}