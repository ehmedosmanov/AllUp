@model RegisterVM
<!--====== Register Part Start ======-->

<section class="register-area pt-10">
    <div class="container-fluid custom-container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="login-register-wrapper mt-30">
                    <h4 class="allup-title">Creat New Account</h4>
                    <p class="mt-10">Already have an account? <a asp-action="Login">Log in instead!</a></p>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <form method="post">
                        <div class="single-form">
                            <input type="text" asp-for="Name" placeholder="First Name">
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                        <div class="single-form">
                            <input type="text" asp-for="Surname" placeholder="Last Name">
                            <span class="text-danger" asp-validation-for="Surname"></span>
                        </div>
                        <div class="single-form">
                            <input type="email" asp-for="Email" placeholder="Email Address">
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div class="single-form">
                            <input type="text" asp-for="Username" placeholder="Username">
                            <span class="text-danger" asp-validation-for="Username"></span>
                        </div>
                        <div class="single-form">
                            <input type="password" asp-for="Password" placeholder="Password">
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                        <div class="single-form">
                            <input type="password" asp-for="CheckPassword" placeholder="Confirm Password">
                            <span class="text-danger" asp-validation-for="CheckPassword"></span>
                        </div>
                        <div class="custom-checkbox mt-30">
                            <input type="checkbox" asp-for="IsRemember">
                            <label asp-for="IsRemember"></label>
                        </div>

                        <div class="single-form">
                            <button type="submit" class="default-btn">sign up</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!--====== Register Part Ends ======-->
